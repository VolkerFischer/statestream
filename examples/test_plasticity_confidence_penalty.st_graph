name: test_plasticity_confidence_penalty
agents: 32
neuron_pools:
    image:
        shape: [1, 28, 28]
        noise: normal
        noise_mean: 0.0
        noise_std: 0.2
        tags: [sensor]
    label:
        shape: [10, 1, 1]
        tags: [sensor]
    hidden1:
        shape: [16, 14, 14]
        tags: [hidden]
        device: gpu:0
    cp_hidden1:
        shape: [16, 14, 14]
        tags: [hidden]
        device: gpu:0
    hidden2:
        shape: [128, 1, 1]
        tags: [hidden]
        device: gpu:0
    cp_hidden2:
        shape: [128, 1, 1]
        tags: [hidden]
        device: gpu:0
    prediction:
        shape: [10, 1, 1]
        act: softmax
        tags: [prediction]
    cp_prediction:
        shape: [10, 1, 1]
        act: softmax
        tags: [prediction]
synapse_pools:
    img_hidden1:
        source:
        - [image]
        target: hidden1
        rf: 5
    cp_img_hidden1:
        source:
        - [image]
        target: cp_hidden1
        rf: 5
    hidden1_2:
        source:
        - [hidden1]
        target: hidden2
    cp_hidden1_2:
        source:
        - [cp_hidden1]
        target: cp_hidden2
    hidden2_pred:
        source:
        - [hidden2]
        target: prediction
    cp_hidden2_pred:
        source:
        - [cp_hidden2]
        target: cp_prediction
plasticities:
    hidden_loss:
        type: loss
        loss_function: negloglikelihood
        source: prediction
        device: gpu:0
        source_t: 3
        target: label
        target_t: 0
        optimizer: adam
        lr: 1e-4
        decay: 0.999
        momentum: 0.99
        parameter:
        - [sp, img_hidden1, W_0_0]
        - [sp, hidden1_2, W_0_0]
        - [sp, hidden2_pred, W_0_0]
        - [np, hidden2, b]
    cp_hidden_loss:
        type: loss
        loss_function: negloglikelihood
        source: cp_prediction
        device: gpu:0
        source_t: 3
        target: label
        target_t: 0
        optimizer: adam
        lr: 1e-4
        decay: 0.999
        momentum: 0.99
        confidence_penalty: 1.0
        parameter:
        - [sp, cp_img_hidden1, W_0_0]
        - [sp, cp_hidden1_2, W_0_0]
        - [sp, cp_hidden2_pred, W_0_0]
        - [np, cp_hidden2, b]
interfaces:
    mnist_small:
        type: mnist
        in: [mnist_pred]
        out: [mnist_image, mnist_label]
        remap:
            mnist_image: image
            mnist_label: label
            mnist_pred: prediction
        source_file: /opt/dl/data/mnist.pkl.gz
