# This is a test with a network with some errors in its specification.
# Datasets required:
#     * mnist (see interfaces/process_if_mnist.py)


name: everything_wrong_0
agents: 8
neuron_pools:
    image:
        shape: [1, 28, 28]
        tags: [sensor]
    LABEL_0:
        shape: [10, 1, 1]
        tags: [sensor]
    extra-np:
        shape: [10, 1, 1]
        tags: [sensor]
    hidden:
        shape: [8, 7, 7]
        device: gpu0
        dropout: 0.01
        tags: [cortex]
    prediction:
        shape: [10, 1, 1]
        act: softmax
        tags: [cortex, prediction]
synapse_pools:
    image:
        source: 
        - [hidden]
        target: prediction
    img_hidden:
        target: hidden
        rf: 5
    hidden_classifier:
        source: 
        - [hidden]
    extra.sp:
        target: None
plasticities:
    hidden_loss:
        device: gpu0
        type: loss
        loss_function: negloglikelihood
        source: prediction
        source_t: 2
        target: LABEL_0
        target_t: 0
        optimizer: adam
        lr: 1e-4
        decay: 0.999
        momentum: 0.99
        parameter: [[sp, hidden_classifier, W]]
interfaces:
    mnist_small:
        type: mnist
        in: []
        out: [mnist_image, mnist_label]
        remap:
            mnist_image: image
            mnist_label: LABEL_0
        source_file: /opt/statestream/datasets/mnist.pkl.gz
