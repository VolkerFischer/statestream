# An example to test / illustrate some weight initializations.
# Dataset required: 
#     None


name: test_sp_weight_init
agents: 8
neuron_pools:
    np1:
        shape: [16, 32, 32]
    np2:
        shape: [16, 32, 32]
    np3:
        shape: [32, 16, 16]
    np4:
        shape: [32, 16, 16]
synapse_pools:
    sp_id:
        source: 
        - [np1]
        target: np2
        rf: [[1]]
        init W_0_0: id
    sp_mid:
        source: 
        - [np2]
        target: np1
        rf: [[1]]
        init W_0_0: -id
    sp_xavier:
        source: 
        - [np2]
        target: np3
        rf: [[5]]
    sp_xavier_par:
        source:
        - [np3]
        target: np2
        rf: [[5]]
        init W_0_0: xavier_4.0
    sp_bilin:
        source:
        - [np3]
        target: np4
        rf: [[5]]
        init W_0_0: bilin
    sp_normal:
        source:
        - [np2]
        target: np4
        rf: [[5]]
        init W_0_0: normal
    sp_normal_par:
        source:
        - [np4]
        target: np2
        rf: [[5]]
        init W_0_0: normal_-0.5_2.0
plasticities: {}
interfaces: {}
