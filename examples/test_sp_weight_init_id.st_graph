# An example to test / illustrate some weight initializations.
# Dataset required: 
#     None


name: test_sp_weight_init
agents: 8
backend: tensorflow
neuron_pools:
    np0:
        shape: [4, 1, 1]
        noise: normal
        noise_std: 0.1
    np1:
        shape: [4, 1, 1]
    np2:
        shape: [12, 1, 1]
    np3:
        shape: [12, 1, 1]
synapse_pools:
    sp_01:
        source: 
        - [np0]
        target: np1
        rf: [[1]]
        init W_0_0: id
    sp_02:
        source: 
        - [np0]
        target: np2
        rf: [[1]]
        init W_0_0: id
    sp_03:
        source: 
        - [np0]
        target: np3
        rf: [[1]]
        init W_0_0: Id
plasticities: {}
interfaces: {}
