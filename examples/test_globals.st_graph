name: test_globals
agents: 128
globals:
    glob_img_res: 32
    glob_factor: 2
    glob_rf: 5
    glob_lr: 1e-3
modules:
    test_module:
        neuron_pools:
            np1:
                shape: [4, glob_img_res, _y_res]
test_module:
    tm1:
        y_res: 64
    tm2:
        y_res: 4 * glob_img_res
neuron_pools:
    image:
        shape: [1, glob_img_res, glob_img_res]
        noise: normal
        noise_mean: 0.0
        noise_std: 0.1
        tags: [sensor]
    label:
        shape: [10, 1, 1]
        tags: [sensor]
    hidden1:
        shape: [16, glob_img_res // glob_factor, glob_img_res // glob_factor]
        tags: [hidden]
    hidden2:
        shape: [32, glob_img_res // (glob_factor * 2), glob_img_res // (glob_factor * 2)]
        tags: [hidden]
    hidden3:
        shape: [64, 1, 1]
        tags: [hidden]
    prediction:
        shape: [10, 1, 1]
        act: softmax
        tags: [prediction]
synapse_pools:
    img_hidden1:
        source:
        - [image]
        target: hidden1
        rf: int(glob_rf)
    hidden1_2:
        source:
        - [hidden1]
        target: hidden2
        rf: 
        - [glob_rf]
    hidden2_3:
        source:
        - [hidden2]
        target: hidden3
    hidden3_pred:
        source:
        - [hidden3]
        target: prediction
plasticities:
    hidden_loss:
        type: loss
        loss_function: negloglikelihood
        source: prediction
        source_t: 4
        target: label
        target_t: 0
        optimizer: adam
        lr: 0.1 * glob_lr
        decay: 0.999
        momentum: 0.99
        parameter:
        - [sp, img_hidden1, W_0_0]
        - [sp, hidden1_2, W_0_0]
        - [sp, hidden2_3, W_0_0]
        - [sp, hidden3_pred, W_0_0]
        - [np, hidden3, b]
interfaces:
    roman_numerals:
        type: roman_numerals
        in: [rn_pred]
        out: [rn_image, rn_label]
        remap:
            rn_image: image
            rn_label: label
            rn_pred: prediction
        min_duration: 6
        max_duration: 6
        fading: 0
